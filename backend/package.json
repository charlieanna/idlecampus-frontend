{
  "name": "idlecampus-backend",
  "version": "1.0.0",
  "description": "Backend API for IdleCampus code execution",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "clean": "rm -rf dist temp/*",
    "migrate:progressive": "tsx scripts/run-progressive-migrations.ts migrate",
    "migrate:progressive:rollback": "tsx scripts/run-progressive-migrations.ts rollback",
    "migrate:progressive:status": "tsx scripts/run-progressive-migrations.ts status"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "body-parser": "^1.20.2",
    "uuid": "^9.0.1",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/body-parser": "^1.19.5",
    "@types/node": "^20.11.5",
    "@types/uuid": "^9.0.7",
    "@types/pg": "^8.10.9",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
